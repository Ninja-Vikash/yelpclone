                <%- include('review', {'username' : 'Leo Chang', 'pic': 'img/post-img/profile9.avif', 'desc': 'Feast Frenzy', 'reviewImg': 'img/post-img/review03.avif'}); -%>
            </div>

            <h4>
                <img src="img/down-blue.svg" >
                <a href="">Show more activity</a>
            </h4>
        </section>

        <section class="category">
            <h3>Categories</h3>
            <div class="category-container">
                <div>
                    <img src="img/restaurant.svg" alt="">
                    <h4>Restaurant</h4>
                </div>
                <div>
                    <img src="img/gift.svg" alt="">
                    <h4>Shopping</h4>
                </div>
                <div>
                    <img src="img/night.svg" alt="">
                    <h4>Nightlife</h4>
                </div>
                <div>
                    <img src="img/arrow.svg" alt="">
                    <h4>Active Life</h4>
                </div>
                <div>
                    <img src="img/beauty.svg" alt="">
                    <h4>Beauty & Spas</h4>
                </div>
                <div>
                    <img src="img/car.svg" alt="">
                    <h4>Automotive</h4>
                </div>
                <div>
                    <img src="img/home.svg" alt="">
                    <h4>Home Services</h4>
                </div>
                <div>
                    <img src="img/more.svg" alt="">
                    <h4>More</h4>
                </div>
            </div>
        </section>

        <footer>
            <%- include('footer'); -%>
        </footer>
    </main>

    <script>
        // Array of background image URLs
        const images = [
            "img/hero-image.jpg",
            "img/hero-image2.jpg",
            "img/hero-image3.jpg",
            "img/hero-image4.jpg"
        ];

        // Array of Heading Text
        const headingText = [
            'Nothing like a new <br>coat of paint',
            'Praiseworthy pasta',
            'Time for a tune-up?',
            'Get a deep clean'
        ]

        // Array of Heading Text
        const buttonText = [
            '<img src="img/search.svg"> Painters',
            '<img src="img/search.svg"> Italian',
            '<img src="img/search.svg"> Auto repair',
            '<img src="img/search.svg"> Cleaners'
        ]

        let currentImageIndex = 0;
        let backgroundElement = document.getElementById("background");

        
        // Function to change background image with fade transition
        function changeBackground() {
            // Fade out
            backgroundElement.style.opacity = 0.8;
            
            // Change background image
            setTimeout(function() {
                backgroundElement.style.backgroundImage = "url('" + images[currentImageIndex] + "')";
                currentImageIndex = (currentImageIndex + 1) % images.length;
                
                setTimeout(function() {
                    backgroundElement.style.opacity = 1;
                }, 1000);
            }, 1000);
        }

        let currentHeadingIndex = 0;
        let headingElement = document.getElementById('heading');

        // Function to change heading
        function changeHeading() {

            // Change background image
            setTimeout(function() {
                headingElement.innerHTML = headingText[currentHeadingIndex];
                currentHeadingIndex = (currentHeadingIndex + 1) % headingText.length;
            }, 1000);
        }
        
        let currentButtonIndex = 0;
        let buttonElement = document.getElementById('heading-btn');
        
        // Function to change heading
        function changeButton() {

            // Change background image
            setTimeout(function() {
                buttonElement.innerHTML = buttonText[currentButtonIndex];
                currentButtonIndex = (currentButtonIndex + 1) % buttonText.length;
            }, 1000);
        }
        // Initial call
        changeBackground();
        changeHeading();
        changeButton();

        // Set interval to change background image
        setInterval(changeBackground, 5000); // Change image every 5 seconds
        setInterval(changeHeading, 5000); // Change image every 5 seconds
        setInterval(changeButton, 5000); // Change image every 5 seconds
    </script>
</body>
</html>

