                <%- include('post', {'username' : 'Ethan Gallagher', 'pic': 'img/post-img/profile1.avif', 'num': 6, 'desc': 'Gourmet Galore', 'firstImg': 'img/post-img/03.jpg', 'secImg': 'img/post-img/04.webp', 'totalPic': 21}); -%>
                <%- include('review', {'username' : 'Maya Patel', 'pic': 'img/post-img/profile4.avif', 'desc': 'Flavor Fusion', 'reviewImg': 'img/post-img/review02.avif'}); -%>
                <%- include('post', {'username' : 'Oliver Montgomery', 'pic': 'img/post-img/profile5.avif', 'num': 2, 'desc': 'Tasty Travels', 'firstImg': 'img/post-img/05.avif', 'secImg': 'img/post-img/06.avif', 'totalPic': 19}); -%>
                <%- include('post', {'username' : 'Harper Thompson', 'pic': 'img/post-img/profile6.avif', 'num': 2, 'desc': 'Palate Pleasures', 'firstImg': 'img/post-img/07.avif', 'secImg': 'img/post-img/08.avif', 'totalPic': 5}); -%>
                <%- include('post', {'username' : 'Zoe Williams', 'pic': 'img/post-img/profile7.avif', 'num': 2, 'desc': 'Cuisine Chronicles', 'firstImg': 'img/post-img/10.avif', 'secImg': 'img/post-img/11.avif', 'totalPic': 12}); -%>
